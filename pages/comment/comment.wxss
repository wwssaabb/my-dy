
.comment-wrap{
	width: 100vw;
	height: 100vh;
	overflow: hidden;
	background-color: #161823;
}
.comment-nav{
	width: 100%;
	height: 35px;
	position:fixed;
	top: 35px;
	left: 0;
	z-index: 20;
	border-bottom: 2px solid #22242e;
}
.comment-nav-left-icon{
	font-size: 20px;
	font-weight: bold;
	color: #cccdcf;
	-webkit-transform: rotate(180deg);
	        transform: rotate(180deg);
}
.comment-nav-center{
	width: 100%;
	height: 100%;
	font-size: 18px;
	font-weight: bold;
	color: #e8e8e9;
	text-align: center;
}
.comment-content-container{
	width: 100%;
	height: calc(100vh - 60px);
	overflow: hidden;
	margin-top:60px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}

