
.follow-wrap{
	width: 100vw;
	height: 100vh;
	overflow: hidden;
	z-index: 20;
}
.follow-top-nav{
	position:fixed;
	top:20px;
	left: 0;
	width: 100%;
	height: 35px;
	color:#c2c3c5;
	z-index: 21;
}
.follow-nologin,
.follow-content,
.follow-content-group,
.follow-nofollow{
	width: 100%;
	height: 100%;
}
.follow-tab{
	position:fixed;
	bottom: 0;
	left: 0;
	right: 0;
	height: 50px;
	width: 100%;
	z-index: 21;
}
.follow-content-left{
	position: fixed;
	left: 10px;
	bottom: 50px;
	width: 70%;
	height: auto;
	z-index: 21;
}
.follow-content-right{
	position: fixed;
	right: 10px;
	bottom: 50px;
	width: 60px;
	height: auto;
	z-index: 21;
}

