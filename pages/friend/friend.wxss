
.friend-wrap {
	width: 100%;
	height: 100vh;
	background-color: #0f0f0f;
	overflow: hidden;
}
.friend-top-nav-wrap {
	width: 100%;
	height: 35px;
	position: fixed;
	top: 35px;
	left: 0;
	overflow: hidden;
	z-index: 20;
}
.friend-tab-wrap {
	width: 100%;
	height: 50px;
	position: fixed;
	bottom: 0;
	left: 0;
	overflow: hidden;
	z-index: 20;
}
.friend-top-nav-left-icon,
.friend-top-nav-center-icon {
	font-size: 14px;
	font-weight: bold;
	color: #535353;
}
.friend-top-nav-center-icon {
	font-weight: normal;
	margin-left: 5px;
}
.friend-top-nav-left-icon {
	font-size: 20px;
}
.friend-top-nav-center-wrap {
	width: 100%;
	height: 100%;
	text-align: center;
	font-size: 20px;
	font-weight: bold;
	color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}

