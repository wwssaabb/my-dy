
.edit-detail-wrap{
	width: 100vw;
	height: 100vh;
	background-color: #161823;
	overflow: hidden;
}
.edit-detail-nav-wrap{
	width: 100%;
	height: 35px;
	position:fixed;
	top: 35px;
	left: 0;
	z-index: 20;
}
.edit-detail-nav-left{
	font-size: 20px;
	color: #d3d3d5;
	-webkit-transform: rotate(180deg);
	        transform: rotate(180deg);
}
.edit-detail-nav-center{
	width: 100%;
	height: 100%;
	line-height: 35px;
	font-size: 16px;
	font-weight: bold;
	color: #d3d3d5;
	text-align: center;
}
.edit-detail-avatar-wrap{
	width: 100%;
	height: auto;
	margin-top: 70px;
	font-size: 14px;
	font-weight: bold;
	color: #e0e0e1;
	letter-spacing: 2px;
	padding: 20px 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.edit-detail-avatar{
	width: 25vw;
	height: 25vw;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	border:2px dashed #d3d3d5;
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-bottom: 10px;
}
.edit-detail-avatar-camera{
	font-size: 38px;
	font-weight: 100;
	color: #d3d3d5;
}
.edit-detail-message-wrap{
	width: calc(100vw - 20px);
	height: auto;
	margin-left:10px;
	border-bottom:1px solid #8a8b91;
}
.edit-detail-message-item-wrap{
	width: 100%;
	height: 20px;
	font-size: 16px;
	color: #d7d8d9;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-bottom: 20px;
}
.edit-detail-message-item{
	width: auto;
	height: auto;
	font-size: 16px;
	font-weight: normal;
	color: #b0b1b8;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.edit-detail-message-arrow-icon{
	font-weight: normal;
	margin-left:5px ;
}
.edit-detail-message-time-activities-wrap{
	width: calc(100vw - 20px);
	height: auto;
	margin:20px 0 0 10px;
	color: #8a8b91;
}
.edit-detail-message-time-activities-title{
	display: inline-block;
	margin-bottom:20px ;
	font-size: 14px;
	font-weight: bold;
}

