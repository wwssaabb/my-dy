
.camera-wrap{
	width: 100vw;
	height: 100vh;
	position: relative;
}
.camera-btn{
	width: 50px;
	height: 50px;
	-webkit-border-radius:50%;
	        border-radius:50%;
	background-color: #FF2D55;
	position: absolute;
	bottom:50px;
	left: 50%;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.camera-close{
	font-size: 18px;
	font-weight: bold;
	position: absolute;
	top: 25px;
	left: 5px;
	-webkit-transform: rotate(45deg);
	        transform: rotate(45deg);
}

