
.message-wrap{
	width: 100vw;
	height: 100vh;
	background-color: #161823;
	overflow: hidden;
}
.message-content{
	width: 100%;
	height: auto;
	margin-top:60px ;
	overflow: hidden;
}
.message-nav{
	width: 100%;
	height: 35px;
	position: fixed;
	top: 35px;
	left: 0;
	z-index: 20;
	border-bottom: 2px solid #22242e;
}
.message-tab{
	width: 100%;
	height: 50px;
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: 20;
}
.message-nav-center{
	width: 100%;
	height: 100%;
	font-size: 18px;
	font-weight: bold;
	color: #e8e8e9;
	text-align: center;
}
.message-nav-right{
	width: 100%;
	height: 100%;
	font-size: 16px;
	font-weight: bold;
	color: #cfcfd2;
	text-align: center;
}
.message-label-list{
	width: 100%;
	height: auto;
}

