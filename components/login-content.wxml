<view class="login-content-wrap"><view class="login-content-title">账号密码登录</view><view class="login-content-input"><view class="login-content-input-account"><view class="input-account-title">账号:</view><view class="input-account-wrap"><input class="{{['input-account',(!isExist)?'input-fail':'']}}" type="text" placeholder="请输入账号" data-event-opts="{{[['blur',[['checkAccount',['$event']]]],['input',[['__set_model',['','account','$event',[]]]]]]}}" value="{{account}}" bindblur="__e" bindinput="__e"/><view data-event-opts="{{[['tap',[['clreaAccount',['$event']]]]]}}" hidden="{{!(account!=='')}}" class="iconfont icon-jiahao input-account-clrea" bindtap="__e"></view></view></view><view class="login-content-input-password"><view class="input-password-title">密码:</view><view class="input-password-wrap"><input class="input-password" type="{{isShowPW?'text':'password'}}" placeholder="请输入密码" data-event-opts="{{[['input',[['__set_model',['','password','$event',[]]]]]]}}" value="{{password}}" bindinput="__e"/><block wx:if="{{password!==''&&!isShowPW}}"><view data-event-opts="{{[['tap',[['changeisShowPW',['$event']]]]]}}" class="iconfont icon-yanjing_bi input-password-show" bindtap="__e"></view></block><block wx:if="{{password!==''&&isShowPW}}"><view data-event-opts="{{[['tap',[['changeisShowPW',['$event']]]]]}}" class="iconfont icon-yanjing-zheng input-password-show" bindtap="__e"></view></block></view><view hidden="{{!(clue!=='')}}" class="login-content-clue">{{''+clue+''}}</view></view></view><view class="login-content-login"><button style="{{(btnStyle)}}" type="default" disabled="{{!isDisabled}}" data-event-opts="{{[['tap',[['toCheckLogin',['$event']]]]]}}" bindtap="__e">登录</button></view></view>