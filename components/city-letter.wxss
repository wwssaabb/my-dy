
.recommed-letter-wrap{
	width: 100%;
	height: 100%;
	overflow: hidden;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.recommed-letter-coentent{
	width: 100%;
	height: auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.recommed-letter-item,
.recommed-letter-top{
	width: 100%;
	height: auto;
	font-size: 10px;
	font-weight: bold;
	color: #999999;
	text-align: center;
	margin-bottom: 2px;
}
.recommed-letter-top{
	display: block;
	width: 0;
	height: 0;
	border-left: 8px solid;
	border-right: 8px solid;
	border-bottom: 16px solid;
	border-color: transparent transparent #999999;
	-webkit-transform: scale(0.6);
	        transform: scale(0.6);
}
.choose-letter{
	font-size: 12px;
	color: #fff;
}
.choose-letter-top{
	border-bottom-color:#fff;
}

