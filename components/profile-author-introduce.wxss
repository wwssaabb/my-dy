
.profile-author-introduce-wrap{
	width: calc(100vw - 20px);
	height: auto;
	margin-left:10px;
}
.profile-author-introduce-title-empty,
.profile-author-introduce-title{
	font-size: 15px;
	font-weight: bold;
	color: #e6e6e7;
	margin: 10px 0;
	letter-spacing: 1px;
}
.profile-author-introduce-label-wrap{
	width: 100%;
	height: auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.profile-author-introduce-label-age,
.profile-author-introduce-label-location,
.profile-author-introduce-label-college{
	font-size: 13px;
	padding: 4px 5px;
	margin-right:5px ;
	-webkit-border-radius:3px;
	        border-radius:3px;
	background-color: #242630;
	font-weight: bold;
	color: #7e7f85;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.profile-author-introduce-label-age-icon{
	color: #20d6f8;
}
.profile-author-introduce-number-list{
	width: 100%;
	height: auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin: 10px 0;
}
.profile-author-introduce-number-laud,
.profile-author-introduce-number-follow,
.profile-author-introduce-number-fans{
	padding: 2px;
	margin-right: 5px;
	font-weight: bold;
	color: #e8e8e9;
}
.profile-author-introduce-number-text{
	font-weight: normal;
	color: #83848a;
	margin-left: 3px;
}

