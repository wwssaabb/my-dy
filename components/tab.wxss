
.tab-wrap{
	width: 100%;
	height: auto;
	-webkit-border-radius:5px;
	        border-radius:5px;
}
.tab-buttons,
.tab-comment{
	width: 100%;
	height: 50px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.tab-comment{
	background-color: transparent;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.tab-item{
	width: 21%;
	height: 50px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	background-color: transparent;
}
.tab-item-text{
	font-weight: bold;
	font-size: 20px;
	color: #c5c5c5;
}
.choose{
	font-size: 22px;
	color: #F8F8F8;
}
.icon-jiahao{
	width: 16%;
	height: 35px;
	font-size: 24px;
	-webkit-border-radius:14px;
	        border-radius:14px;
	background-color: #fff;
}
.tab-comment-input{
	width: 80%;
	height: 30px;
	font-size: 12px;
	font-weight: bold;
	color: #a09d9d;
	padding-left:10px;
	background-color: transparent;
}
.tab-comment-at,
.tab-comment-face{
	width: 10%;
	height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 24px;
	font-weight: bold;
	color: #a09d9d;
}

