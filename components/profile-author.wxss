
.profile-author-wrap {
	width: 100%;
	height: auto;
	z-index: 20;
}
.author-avatar-wrap {
	width: 100%;
	height: 16.90821vw;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	/*border: 1px solid red;*/
}
.author-avatar {
	width: 16.90821vw;
	height: 16.90821vw;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	border: 5px solid #161823;
	margin: -20px 5px 0 5px;
	position: relative;
}
.author-avatar-img {
	width: 16.90821vw;
	height: 16.90821vw;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}
.author-avatar-camera-img {
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	font-size: 26px;
	font-weight: bold;
	color: #ececed;
}
.author-avatar-edit-wrap,
.author-avatar-follow-wrap {
	width: 75%;
	height: 35px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.author-avatar-is-follow,
.author-avatar-follow {
	width: 86%;
	height: 100%;
	background-color: #fe2c55;
	-webkit-border-radius: 3px;
	        border-radius: 3px;
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.author-avatar-is-follow {
	background-color: transparent;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.author-avatar-is-follow-left,
.author-avatar-is-follow-right {
	width: 49%;
	height: 100%;
	-webkit-border-radius: 3px;
	        border-radius: 3px;
	background-color: #393a44;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.author-avatar-is-follow-right {
	background-color: #fe2c55;
}
.author-avatar-follow-icon,
.author-avatar-arrow-icon,
.author-avatar-plus-icon {
	font-size: 18px;
	font-weight: normal;
	color: #ececed;
}
.author-avatar-arrow-wrap {
	width: 35px;
	height: 35px;
	-webkit-border-radius: 3px;
	        border-radius: 3px;
	background-color: #393a44;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.author-avatar-arrow-icon {
	-webkit-transform: rotate(90deg);
	        transform: rotate(90deg);
}
.author-avatar-edit {
	width: 73%;
	height: 100%;
	background-color: #393a44;
	-webkit-border-radius: 3px;
	        border-radius: 3px;
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.author-avatar-add-friends-wrap {
	width: 25%;
	height: 100%;
	background-color: #393a44;
	-webkit-border-radius: 3px;
	        border-radius: 3px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.author-avatar-is-follow-left,
.author-avatar-is-follow-right,
.author-avatar-is-follow,
.author-avatar-add-friends-wrap,
.author-avatar-edit,
.author-avatar-follow {
	font-size: 15px;
	font-weight: bold;
	color: #ececed;
}

