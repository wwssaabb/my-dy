
.friend-content-wrap {
	width: 100%;
	height: 100%;
}
.friend-content-empty,
.friend-content {
	width: 100%;
	height: auto;
}
.friend-content-empty {
	margin-top: 50px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 20px 0;
	border-bottom: 2px solid #222222;
}
.friend-content-empty-clue1 {
	font-size: 16px;
	font-weight: bold;
	text-align: center;
	letter-spacing: 2px;
	color: #dedede;
	margin-bottom: 10px;
}
.friend-content-empty-clue2 {
	font-size: 14px;
	font-weight: bold;
	text-align: center;
	letter-spacing: 1px;
	color: #ababab;
}
.friend-recommend {
	width: 100%;
	height: auto;
}
.friend-recommend-title {
	width: 100%;
	height: 20px;
	font-size: 14px;
	color: #e1e1e1;
	font-weight: bold;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: start;
	        justify-content: start;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.friend-recommend-title-icon {
	color: #535353;
	font-size: 14px;
	margin-left: 2px;
}
.friend-recommend-empty {
	width: 100%;
	height: auto;
	padding: 40px 0;
	font-size: 12px;
	color: #535353;
	text-align: center;
}

